SET(CMAKE_SYSTEM_NAME Cygwin)
SET(CMAKE_SYSTEM_VERSION 1)

SET(CMAKE_LEGACY_CYGWIN_WIN32 0)

SET(CMAKE_C_COMPILER /bin/i686-pc-mingw32-gcc.exe)
SET(CMAKE_CXX_COMPILER /bin/i686-pc-mingw32-g++.exe)

SET(CMAKE_FIND_ROOT_PATH  /bin/)

SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -std=gnu++0x -static-libgcc -static-libstdc++ " CACHE STRING "Needs to be")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=gnu++0x -static-libgcc -static-libstdc++ " CACHE STRING "Needs to be")
